
@using ERP.BlazorUI.Components
@inherits LayoutComponentBase

@inject NavigationManager NavigationManager

<MyMudThemeProvider />

<div class="page mud-layout">

    <div class="sidebar mud-elevation-1">
        <div class="top-row mud-drawer-head">
            <div class="top-row">
                @* <MudIconButton Icon="@Icons.Material.Filled.Home" Style="color: white;" OnClick="navigateToHome" /> *@
                <p class="navbar-brand">Faculty of Engineering</p>
            </div>
        </div>

        <input type="checkbox" title="Navigation menu" class="navbar-toggler" />
        <div class="navbar-toggler" role="button" aria-label="Toggle navigation" >
            <span class="navbar-toggler-icon"></span>
        </div>

       

        <div class="nav-scrollable" onclick="toggle">
            <NavMenu />
        </div>
    </div>

    <main>
        <div class="top-row px-4">
            <MudIconButton Icon="@Icons.Material.Filled.AccountBox" Style="color: white;" />
        </div>

        <MudContainer Class="my-2 pt-2">
            @Body
        </MudContainer>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private bool IsNavbarCollapsed { get; set; } = true;

   

    private void toggleNavbar()
    {
        IsNavbarCollapsed = !IsNavbarCollapsed;
    }

    private void navigateToHome()
    {
        NavigationManager.NavigateTo("/");
    }
}
